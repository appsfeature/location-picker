<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_rounded_corner"
        android:drawableStart="@drawable/ic_pointer"
        android:drawableLeft="@drawable/ic_place_red_800_24dp"
        android:drawableEnd="@drawable/ic_search_black_24dp"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:drawablePadding="5dp"
        android:gravity="start|center_vertical"
        android:hint="Search Location"
        android:maxLines="1"
        android:padding="16dp"
        android:textColorHint="@color/colorPrimary"
        android:textCursorDrawable="@null"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/white_rounded_corner"
        android:orientation="vertical"
        android:padding="5dp">

        <EditText
            android:id="@+id/tv_address_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/addressline1_hint"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="5"
            android:minLines="1"
            android:textSize="16sp"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/tv_address_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_city_details"
            android:hint="Enter location"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="3"
            android:minLines="1"
            android:padding="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_city_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="PinCode"
            android:textColor="@color/quantum_grey600"
            android:textSize="16sp"
            android:padding="16dp"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/quantum_googgreen500"
            android:text="Continue"
            android:textColor="@color/quantum_white_100"/>


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_current_location"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/input_layout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="#9FFFFFFF"
        android:contentDescription="Search Location"
        android:padding="8dp"
        android:src="@drawable/ic_my_location_black_24dp" />

    <ImageView
        android:id="@+id/iv_direction_tool"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_above="@+id/input_layout"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_google_maps_tool"
        android:background="#9FFFFFFF"
        android:contentDescription="directions"
        android:padding="8dp"
        android:src="@drawable/ic_directions_blue_24dp" />

    <ImageView
        android:id="@+id/iv_google_maps_tool"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_above="@+id/input_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="#9FFFFFFF"
        android:contentDescription="google_map"
        android:padding="8dp"
        android:src="@drawable/ic_google_maps" />

</RelativeLayout>
